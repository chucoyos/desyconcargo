<div class="container mx-auto px-6 py-8">
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-green-50 to-white px-8 py-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-800">Nuevo Usuario</h1>
            <p class="text-gray-600 text-sm">Crear un nuevo usuario en el sistema</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to users_path, class: "text-gray-600 hover:text-gray-800 p-2 rounded-lg hover:bg-gray-50 transition-colors duration-200", title: "Volver" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="p-8">
      <%= form_with(model: @user, local: true, class: "space-y-8") do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <h4 class="text-sm font-medium text-red-800">Hay errores en el formulario</h4>
                <ul class="mt-1 text-sm text-red-700 list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- User Information -->
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-4">Información del Usuario</h3>
              <div class="bg-gray-50 rounded-xl p-6 space-y-6">
                <!-- Email -->
                <div>
                  <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200", placeholder: "usuario@ejemplo.com", required: true %>
                  <p class="mt-1 text-sm text-gray-500">El usuario podrá iniciar sesión con este email</p>
                </div>

                <!-- Password -->
                <div>
                  <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.password_field :password, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200", placeholder: "Contraseña segura", required: true %>
                  <p class="mt-1 text-sm text-gray-500">Mínimo 6 caracteres</p>
                </div>

                <!-- Password Confirmation -->
                <div>
                  <%= form.label :password_confirmation, "Confirmar Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.password_field :password_confirmation, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200", placeholder: "Repetir contraseña", required: true %>
                </div>

                <!-- Role -->
                <div>
                  <%= form.label :role_id, "Rol", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.select :role_id, options_from_collection_for_select(Role.all, :id, :name), { include_blank: "Seleccionar rol" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200", required: true %>
                </div>
              </div>
            </div>
          </div>

          <!-- Account Information Preview -->
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-4">Vista Previa de la Cuenta</h3>
              <div class="bg-gray-50 rounded-xl p-6 space-y-4">
                <!-- Avatar Preview -->
                <div class="flex items-center space-x-4">
                  <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center shadow-sm">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-gray-800">Nuevo Usuario</h4>
                    <p class="text-gray-600">El email se mostrará aquí</p>
                  </div>
                </div>

                <!-- Account Status -->
                <div class="border-t border-gray-200 pt-4">
                  <div class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-600">Estado de la Cuenta</span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      Lista para usar
                    </span>
                  </div>
                </div>

                <!-- Info Box -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-blue-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div class="text-sm text-blue-800">
                      <p class="font-medium">Nota importante:</p>
                      <p>El usuario podrá iniciar sesión inmediatamente con el email y contraseña proporcionados.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to users_path, class: "px-6 py-3 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors duration-200 font-medium" do %>
            Cancelar
          <% end %>
          <%= form.submit "Crear Usuario", class: "px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>