<div class="container mx-auto px-6 py-8">
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-green-50 to-white px-8 py-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-800">Usuario</h1>
            <p class="text-gray-600 text-sm">Detalles del usuario</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to users_path, class: "text-gray-600 hover:text-gray-800 p-2 rounded-lg hover:bg-gray-50 transition-colors duration-200", title: "Volver" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          <% end %>
          <%= link_to edit_user_path(@user), class: "text-green-600 hover:text-green-800 p-2 rounded-lg hover:bg-green-50 transition-colors duration-200", title: "Editar" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- User Information -->
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Información del Usuario</h3>
            <div class="bg-gray-50 rounded-xl p-6 space-y-4">
              <!-- Avatar and Email -->
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center shadow-sm">
                  <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="text-xl font-semibold text-gray-800"><%= @user.email %></h4>
                  <p class="text-gray-600"><%= @user.email.split('@').first %></p>
                </div>
              </div>

              <!-- Role -->
              <div class="border-t border-gray-200 pt-4">
                <div class="flex items-center justify-between">
                  <span class="text-sm font-medium text-gray-600">Rol</span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <%= @user.role&.name || 'Sin rol' %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Account Details -->
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Detalles de la Cuenta</h3>
            <div class="bg-gray-50 rounded-xl p-6 space-y-4">
              <!-- Created At -->
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-600">Fecha de Creación</span>
                <span class="text-sm text-gray-800"><%= l(@user.created_at, format: :short) %></span>
              </div>

              <!-- Updated At -->
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-600">Última Actualización</span>
                <span class="text-sm text-gray-800"><%= l(@user.updated_at, format: :short) %></span>
              </div>

              <!-- Account Status -->
              <div class="border-t border-gray-200 pt-4">
                <div class="flex items-center justify-between">
                  <span class="text-sm font-medium text-gray-600">Estado de la Cuenta</span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    Activa
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>