<%= turbo_stream.replace "vessel_#{@vessel.id}" do %>
  <tr class="hover:bg-gray-50" id="vessel_<%= @vessel.id %>">
    <td class="px-3 sm:px-6 py-4 text-sm font-medium text-gray-900">
      <div class="flex items-center">
        <div class="bg-green-600 p-1 rounded mr-2 flex-shrink-0">
          <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <div class="min-w-0 flex-1">
          <div class="text-sm font-medium text-gray-900 truncate"><%= @vessel.name %></div>
          <div class="text-xs text-gray-500 sm:hidden"><%= @vessel.shipping_line.name %></div>
          <div class="text-xs text-gray-400 sm:hidden"><%= @vessel.created_at.strftime("%d/%m") %></div>
        </div>
      </div>
    </td>
    <td class="hidden sm:table-cell px-6 py-4 text-sm text-gray-500"><%= @vessel.shipping_line.name %></td>
    <td class="hidden sm:table-cell px-6 py-4 text-sm text-gray-500"><%= @vessel.created_at.strftime("%d de %b") %></td>
    <td class="px-3 sm:px-6 py-4 text-sm font-medium">
      <div class="flex space-x-1 sm:space-x-2 justify-end">
        <%= link_to edit_vessel_path(@vessel), class: "text-yellow-600 hover:text-yellow-900", data: { turbo_frame: "modal" } do %>
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
        <% end %>
        <%= button_to vessel_path(@vessel), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0", data: { turbo_confirm: "Are you sure you want to delete this vessel?" } do %>
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>

<%= turbo_stream.replace "vessel_mobile_#{@vessel.id}" do %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4" id="vessel_mobile_<%= @vessel.id %>">
    <div class="flex items-start justify-between">
      <div class="flex items-center flex-1 min-w-0">
        <div class="bg-green-600 p-2 rounded-lg mr-3 flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <div class="min-w-0 flex-1">
          <h3 class="text-lg font-semibold text-gray-900 truncate"><%= @vessel.name %></h3>
          <p class="text-sm text-gray-600 mt-1"><%= @vessel.shipping_line.name %></p>
          <p class="text-xs text-gray-400 mt-1"><%= @vessel.created_at.strftime("%d/%m") %></p>
        </div>
      </div>
      <div class="flex space-x-2 ml-4">
        <%= link_to edit_vessel_path(@vessel), class: "text-yellow-600 hover:text-yellow-900 p-2", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        <% end %>
        <%= button_to vessel_path(@vessel), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-2", data: { turbo_confirm: "Are you sure you want to delete this vessel?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream.append "toast-container", partial: "shared/toast_message", locals: { type: :notice, message: I18n.t('vessels.update.success') } %>

<%= turbo_stream.update "modal", "" %>