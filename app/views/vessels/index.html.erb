<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-12">
  <div class="flex flex-col sm:flex-row items-start mb-6">
    <div class="bg-green-600 p-3 rounded-lg mb-4 sm:mb-0 sm:mr-4 flex-shrink-0">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      </svg>
    </div>
    <div class="flex-1 w-full sm:w-auto">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-2">
        <div class="mb-4 sm:mb-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Buques</h1>
          <p class="text-sm sm:text-base text-gray-500">Gestión de buques por línea naviera</p>
        </div>
        <div class="w-full sm:w-auto sm:ml-4">
          <%= link_to "Nuevo Buque", new_vessel_path, class: "w-full sm:w-auto bg-green-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg shadow-md hover:bg-green-700 hover:shadow-lg transition duration-200 text-center", data: { turbo_frame: "modal" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg p-4 sm:p-6 mb-6">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h3 class="text-base sm:text-lg font-medium text-gray-900 ml-2">Buscar Buques</h3>
    </div>
    <%= form_with url: vessels_path, method: :get, class: "flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2" do |f| %>
      <%= f.hidden_field :page, value: 1 %>
      <%= f.text_field :query, value: params[:query], placeholder: "Buscar buques...", class: "flex-1 px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-green-500 focus:border-green-500 text-sm sm:text-base" %>
      <div class="flex space-x-2">
        <%= f.select :per_page, options_for_select([10, 20, 50], params[:per_page] || 10), {}, class: "px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-green-500 focus:border-green-500 text-sm sm:text-base", onchange: "this.form.submit()" %>
        <%= f.submit "Buscar", class: "bg-green-600 text-white px-4 sm:px-6 py-2 rounded-lg hover:bg-green-700 transition duration-200 text-sm sm:text-base" %>
        <% if params[:query].present? %>
          <%= link_to "Limpiar", vessels_path, class: "bg-gray-500 text-white px-4 sm:px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-200 text-center text-sm sm:text-base" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden md:block bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Línea Naviera</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha de Creación</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" id="vessels_list">
          <% @vessels.each do |vessel| %>
            <tr class="hover:bg-gray-50" id="vessel_<%= vessel.id %>">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <div class="flex items-center">
                  <div class="bg-green-600 p-1 rounded mr-2">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                  <%= vessel.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= vessel.shipping_line.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= vessel.created_at.strftime("%d de %b") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2 justify-end">
                  <%= link_to edit_vessel_path(vessel), class: "text-yellow-600 hover:text-yellow-900", data: { turbo_frame: "modal" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                  <% end %>
                  <%= button_to vessel_path(vessel), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0", data: { turbo_confirm: "Are you sure you want to delete this vessel?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Mobile Card View -->
  <div class="md:hidden space-y-4" id="vessels_list_mobile">
    <% @vessels.each do |vessel| %>
      <div class="bg-white shadow-md rounded-lg p-4 hover:bg-gray-50" id="vessel_mobile_<%= vessel.id %>">
        <div class="flex items-start justify-between">
          <div class="flex items-center flex-1">
            <div class="bg-green-600 p-2 rounded mr-3 flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-medium text-gray-900 truncate"><%= vessel.name %></h3>
              <p class="text-sm text-gray-500">Línea: <%= vessel.shipping_line.name %></p>
              <p class="text-xs text-gray-400 mt-1"><%= vessel.created_at.strftime("%d de %b") %></p>
            </div>
          </div>
          <div class="flex space-x-2 ml-2">
            <%= link_to edit_vessel_path(vessel), class: "text-yellow-600 hover:text-yellow-900 p-1", data: { turbo_frame: "modal" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
            <% end %>
            <%= button_to vessel_path(vessel), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-1", data: { turbo_confirm: "Are you sure you want to delete this vessel?" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-center">
    <%= paginate @vessels, class: "flex flex-wrap justify-center space-x-1 sm:space-x-2" %>
  </div>

  <!-- Turbo Frame for Modal -->
  <%= turbo_frame_tag "modal" %>
</div>
