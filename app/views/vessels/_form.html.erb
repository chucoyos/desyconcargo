<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="bg-white p-8 rounded-lg shadow-xl max-w-md mx-auto w-full">
    <h2 class="text-2xl font-bold mb-6 text-gray-900"><%= @vessel.new_record? ? "Nuevo Buque" : "Editar Buque" %></h2>

    <%= form_with(model: @vessel, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none" %>
        <% if @vessel.errors[:name].any? %>
          <p class="text-red-500 text-sm mt-1"><%= @vessel.errors[:name].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :shipping_line_id, "Línea Naviera", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :shipping_line_id, ShippingLine.all, :id, :name, { prompt: "Selecciona una línea naviera" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none" %>
        <% if @vessel.errors[:shipping_line_id].any? %>
          <p class="text-red-500 text-sm mt-1"><%= @vessel.errors[:shipping_line_id].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancelar", vessels_path, class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-200", data: { turbo_frame: "_top" } %>
        <%= form.submit class: "bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
