<% if @role.persisted? %>
  <%= turbo_stream.append "toast-container" do %>
    <%= render "shared/toast_message", type: :notice, message: t('roles.create.success') %>
  <% end %>
  <%= turbo_stream.redirect_to @role %>
<% else %>
  <%= turbo_stream.replace "role_form" do %>
    <%= render "form", role: @role %>
  <% end %>
<% end %>