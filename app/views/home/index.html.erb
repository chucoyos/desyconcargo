<!-- Hero Section -->
<div class="bg-gradient-to-br from-green-50 via-white to-green-100 min-h-screen">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16">
    <!-- Hero Content -->
    <div class="text-center mb-12 sm:mb-16 lg:mb-20">
      <div class="flex flex-col sm:flex-row justify-center items-center mb-6 sm:mb-8">
        <div class="w-16 h-16 sm:w-20 sm:h-20 bg-green-600 rounded-xl flex items-center justify-center shadow-lg mb-4 sm:mb-0 sm:mr-6">
          <svg class="w-8 h-8 sm:w-12 sm:h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20 7h-2V4c0-1.1-.9-2-2-2H8C6.9 2 6 2.9 6 4v3H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2zM8 4h8v3H8V4zm8 15H8v-4h8v4zm4-6H4V9h16v4z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-2">
            <span class="text-green-600">Desy</span>ConCargo
          </h1>
          <p class="text-lg sm:text-xl text-gray-600">Agencia Aduanal y Asignación electrónica de carga</p>
        </div>
      </div>

      <p class="text-lg sm:text-xl lg:text-xl text-gray-700 max-w-2xl lg:max-w-3xl mx-auto mb-6 sm:mb-8 leading-relaxed px-4">
        Especialistas en trámites aduanales y Revalidaciones.
        Facilitamos tus operaciones de importación y exportación con eficiencia y cumplimiento normativo.
      </p>

      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center px-4">
        <%= link_to "#servicios", class: "inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1 text-sm sm:text-base" do %>
          <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Nuestros Servicios
        <% end %>
        <%= link_to "#contacto", class: "inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white hover:bg-gray-50 text-gray-800 font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 border-2 border-gray-200 text-sm sm:text-base" do %>
          <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contactar Ahora
        <% end %>
      </div>
    </div>

    <!-- Services Section -->
    <div id="servicios" class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 mb-12 sm:mb-16 lg:mb-20">
      <!-- Agencia Aduanal -->
      <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 sm:p-8 text-center">
        <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4 sm:mb-6">
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
        </div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-3 sm:mb-4">Agencia Aduanal</h3>
        <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
          Servicios completos de agencia aduanal para importaciones y exportaciones.
          Clasificación arancelaria, permisos, despachos aduanales y asesoría especializada.
        </p>
        <div class="mt-4 sm:mt-6">
          <span class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Servicio Integral
          </span>
        </div>
      </div>

      <!-- Revalidaciones -->
      <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 sm:p-8 text-center">
        <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mx-auto mb-4 sm:mb-6">
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-3 sm:mb-4">Revalidaciones</h3>
        <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
          Asignación electrónica de carga. Gestión eficiente de permisos
          y autorizaciones para transporte de mercancías con cumplimiento normativo.
        </p>
        <div class="mt-4 sm:mt-6">
          <span class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Proceso Rápido
          </span>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 mb-12 sm:mb-16 lg:mb-20">
      <div class="text-center mb-6 sm:mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-3 sm:mb-4">Nuestra Experiencia en Números</h2>
        <p class="text-sm sm:text-base text-gray-600">Más de 15 años facilitando operaciones aduanales y logísticas</p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8">
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold text-blue-600 mb-1 sm:mb-2">15+</div>
          <div class="text-xs sm:text-sm text-gray-600">Años de Experiencia</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold text-green-600 mb-1 sm:mb-2">5,000+</div>
          <div class="text-xs sm:text-sm text-gray-600">Operaciones Aduanales</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold text-purple-600 mb-1 sm:mb-2">98%</div>
          <div class="text-xs sm:text-sm text-gray-600">Tasa de Éxito</div>
        </div>
        <div class="text-center">
          <div class="text-3xl sm:text-4xl font-bold text-orange-600 mb-1 sm:mb-2">100%</div>
          <div class="text-xs sm:text-sm text-gray-600">Atención al Cliente</div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div id="contacto" class="text-center">
      <div class="bg-gradient-to-r from-green-600 to-blue-600 rounded-2xl p-6 sm:p-8 text-white shadow-xl">
        <h2 class="text-2xl sm:text-3xl font-bold mb-3 sm:mb-4">¿Necesitas Servicios Aduanales?</h2>
        <p class="text-lg sm:text-xl mb-6 sm:mb-8 opacity-90">
          Confía en nuestros expertos para tus trámites aduanales y revalidaciones.
          Servicio profesional con resultados garantizados.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <%= link_to new_user_session_path, class: "inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-green-500 hover:bg-green-400 text-white font-bold rounded-xl transition-colors duration-200 shadow-lg text-sm sm:text-base" do %>
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Contactar Ahora
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
