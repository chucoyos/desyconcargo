<% if flash.any? %>
  <div id="flash" class="fixed top-4 right-4 z-50 space-y-2">
    <% flash.each do |type, message| %>
      <div class="<%= flash_class(type) %> flex items-center p-4 rounded-lg shadow-lg max-w-md">
        <div class="flex-shrink-0">
          <%= flash_icon(type) %>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm font-medium"><%= message %></p>
        </div>
        <div class="ml-auto pl-3">
          <button type="button" class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 <%= flash_close_button_class(type) %> hover:bg-opacity-20" onclick="this.parentElement.parentElement.remove()">
            <span class="sr-only">Dismiss</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>