<div class="container mx-auto mt-8 px-4 sm:px-6 lg:px-8 my-12">
  <div class="flex flex-col sm:flex-row items-start mb-6">
    <div class="bg-green-600 p-3 rounded-lg mb-4 sm:mb-0 sm:mr-4 flex-shrink-0">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <circle cx="12" cy="5" r="3"/>
        <line x1="12" y1="22" x2="12" y2="8"/>
        <path d="m5 12a7 7 0 0 1 14 0"/>
      </svg>
    </div>
    <div class="flex-1 w-full sm:w-auto">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-2">
        <div class="mb-4 sm:mb-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Puertos</h1>
          <p class="text-sm sm:text-base text-gray-500">Gestión de puertos marítimos</p>
        </div>
        <div class="w-full sm:w-auto sm:ml-4">
          <%= link_to new_port_path, class: "w-full sm:w-auto bg-green-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg shadow-md hover:bg-green-700 hover:shadow-lg transition duration-200 text-center", data: { turbo_frame: "modal" } do %>
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Nuevo Puerto
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg p-4 sm:p-6 mb-6">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h3 class="text-base sm:text-lg font-medium text-gray-900 ml-2">Buscar Puertos</h3>
    </div>
    <%= form_with url: ports_path, method: :get, class: "flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2" do |f| %>
      <%= f.hidden_field :page, value: 1 %>
      <%= f.text_field :query, value: params[:query], placeholder: "Buscar puertos...", class: "flex-1 px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-green-500 focus:border-green-500 text-sm sm:text-base" %>
      <div class="flex space-x-2">
        <%= f.select :per_page, options_for_select([10, 20, 50], params[:per_page] || 10), {}, class: "px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-green-500 focus:border-green-500 text-sm sm:text-base", onchange: "this.form.submit()" %>
        <%= f.submit "Buscar", class: "bg-green-600 text-white px-4 sm:px-6 py-2 rounded-lg hover:bg-green-700 transition duration-200 text-sm sm:text-base" %>
        <% if params[:query].present? %>
          <%= link_to "Limpiar", ports_path, class: "bg-gray-500 text-white px-4 sm:px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-200 text-center text-sm sm:text-base" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Desktop Table -->
  <div class="hidden md:block bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">País</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código UN</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Creado</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody id="ports_list" class="bg-white divide-y divide-gray-200">
          <% @ports.each do |port| %>
            <tr class="hover:bg-gray-50" id="port_<%= port.id %>">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <div class="flex items-center">
                  <div class="bg-green-600 p-1 rounded mr-2">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <%= port.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= port.country_flag %> <%= port.country_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= port.uncode %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= port.created_at.strftime("%d de %b") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2 justify-end">
                  <%= link_to edit_port_path(port), class: "text-yellow-600 hover:text-yellow-900", data: { turbo_frame: "modal" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                  <% end %>
                  <%= button_to port_path(port), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0", data: { turbo_confirm: "Are you sure you want to delete this port?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Mobile Cards -->
  <div id="ports_list_mobile" class="md:hidden space-y-4">
    <% @ports.each do |port| %>
      <div class="bg-white shadow-md rounded-lg p-4 hover:bg-gray-50" id="port_mobile_<%= port.id %>">
        <div class="flex items-start justify-between">
          <div class="flex items-center flex-1">
            <div class="bg-green-600 p-2 rounded mr-3 flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-medium text-gray-900 truncate"><%= port.name %></h3>
              <p class="text-xs text-gray-400 mt-1"><%= port.country_flag %> <%= port.country_name %> • <%= port.uncode %></p>
            </div>
          </div>
          <div class="flex space-x-2 ml-2">
            <%= link_to edit_port_path(port), class: "text-yellow-600 hover:text-yellow-900 p-1", data: { turbo_frame: "modal" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
            <% end %>
            <%= button_to port_path(port), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-1", data: { turbo_confirm: "Are you sure you want to delete this port?" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-6">
    <%= paginate @ports %>
  </div>

  <% if @ports.empty? && params[:query].present? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No se encontraron puertos</h3>
      <p class="mt-1 text-sm text-gray-500">No hay puertos que coincidan con "<%= params[:query] %>".</p>
      <div class="mt-6">
        <%= link_to "Ver todos los puertos", ports_path, class: "text-blue-600 hover:text-blue-500" %>
      </div>
    </div>
  <% elsif @ports.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No hay puertos</h3>
      <p class="mt-1 text-sm text-gray-500">Comienza creando el primer puerto.</p>
      <div class="mt-6">
        <%= link_to new_port_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700", data: { turbo_frame: "modal" } do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Nuevo Puerto
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Turbo Frame for Modal -->
<%= turbo_frame_tag "modal" %>
