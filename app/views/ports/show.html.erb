<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-bold mb-6">Puerto: <%= @port.name %></h1>

  <div class="mb-4">
    <%= link_to "Editar", edit_port_path(@port), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 mr-2", data: { turbo_frame: "modal" } %>
    <%= button_to "Eliminar", port_path(@port), method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600", data: { turbo_confirm: "Are you sure?" } %>
  </div>

  <div class="mb-4">
    <%= link_to "Nuevo Puerto", new_port_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600", data: { turbo_frame: "modal" } %>
  </div>

  <div class="mb-4">
    <%= link_to "Volver a la Lista", ports_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
  </div>

  <!-- Turbo Frame for Modal -->
  <%= turbo_frame_tag "modal" %>
</div>
