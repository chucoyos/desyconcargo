<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" id="modal-backdrop">
  <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-96 shadow-lg rounded-md bg-white">
    <h2 class="text-2xl font-bold mb-6 text-gray-900"><%= port.new_record? ? "Nuevo Puerto" : "Editar Puerto" %></h2>

    <%= form_with(model: port, class: "space-y-6") do |form| %>
      <% if port.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
          <h3 class="text-sm font-medium mb-2"><%= pluralize(port.errors.count, "error") %> impidió guardar el puerto:</h3>
          <ul class="list-disc list-inside text-sm">
            <% port.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none" %>
        <% if port.errors[:name].any? %>
          <p class="text-red-500 text-sm mt-1"><%= port.errors[:name].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :country, "País", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :country,
                        options_for_select(
                          ISO3166::Country.all.map { |c| ["#{c.emoji_flag} #{c.common_name || c.iso_short_name}", c.alpha2] },
                          port.country
                        ),
                        { prompt: "Selecciona un país" },
                        class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none" %>
        <% if port.errors[:country].any? %>
          <p class="text-red-500 text-sm mt-1"><%= port.errors[:country].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :uncode, "Código UN", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :uncode, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 focus:outline-none" %>
        <% if port.errors[:uncode].any? %>
          <p class="text-red-500 text-sm mt-1"><%= port.errors[:uncode].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancelar", ports_path, class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-200", data: { turbo_frame: "_top" } %>
        <%= form.submit class: "bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
