<%# app/views/ports/create.turbo_stream.erb %>
<%= turbo_stream.append "ports_list" do %>
  <tr class="hover:bg-gray-50" id="port_<%= @port.id %>">
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
      <div class="flex items-center">
        <div class="bg-green-600 p-1 rounded mr-2">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <%= @port.name %>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
      <%= @port.country_flag %> <%= @port.country_name %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @port.uncode %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @port.created_at.strftime("%d de %b") %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
      <div class="flex space-x-2 justify-end">
        <%= link_to edit_port_path(@port), class: "text-yellow-600 hover:text-yellow-900", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
        <% end %>
        <%= button_to port_path(@port), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0", data: { turbo_confirm: "Are you sure you want to delete this port?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>

<%= turbo_stream.append "ports_list_mobile" do %>
  <div class="bg-white shadow-md rounded-lg p-4 hover:bg-gray-50" id="port_mobile_<%= @port.id %>">
    <div class="flex items-start justify-between">
      <div class="flex items-center flex-1">
        <div class="bg-green-600 p-2 rounded mr-3 flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-medium text-gray-900 truncate"><%= @port.name %></h3>
          <p class="text-xs text-gray-400 mt-1"><%= @port.country_flag %> <%= @port.country_name %> â€¢ <%= @port.uncode %></p>
        </div>
      </div>
      <div class="flex space-x-2 ml-2">
        <%= link_to edit_port_path(@port), class: "text-yellow-600 hover:text-yellow-900 p-1", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
        <% end %>
        <%= button_to port_path(@port), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-1", data: { turbo_confirm: "Are you sure you want to delete this port?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream.append "toast-container", partial: "shared/toast_message", locals: { type: :notice, message: I18n.t('ports.create.success') } %>

<%= turbo_stream.update "modal", "" %>
<%= turbo_stream.remove "modal-backdrop" %>