<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="bg-white p-8 rounded-lg shadow-xl max-w-md mx-auto w-full">
    <h2 class="text-2xl font-bold mb-6 text-gray-900"><%= @shipping_line.new_record? ? "Nueva Línea Naviera" : "Editar Línea Naviera" %></h2>

    <%= form_with(model: @shipping_line, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 focus:outline-none" %>
        <% if @shipping_line.errors[:name].any? %>
          <p class="text-red-500 text-sm mt-1"><%= @shipping_line.errors[:name].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancelar", shipping_lines_path, class: "bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-200", data: { turbo_frame: "_top" } %>
        <%= form.submit class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>