<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="bg-white p-6 rounded shadow-lg max-w-md mx-auto w-full">
    <h2 class="text-2xl font-bold mb-4"><%= @shipping_line.new_record? ? "Nueva Línea Naviera" : "Editar Línea Naviera" %></h2>

    <%= form_with(model: @shipping_line, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        <% if @shipping_line.errors[:name].any? %>
          <p class="text-red-500 text-sm"><%= @shipping_line.errors[:name].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex justify-end space-x-2">
        <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <%= link_to "Cancelar", shipping_lines_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600", data: { turbo_frame: "_top" } %>
      </div>
    <% end %>
  </div>
</div>