<%= turbo_stream.append "shipping_lines_list" do %>
  <tr class="hover:bg-gray-50" id="shipping_line_<%= @shipping_line.id %>">
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
      <div class="flex items-center">
        <div class="bg-blue-600 p-1 rounded mr-2">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="5" r="3"/>
            <line x1="12" y1="22" x2="12" y2="8"/>
            <path d="m5 12a7 7 0 0 1 14 0"/>
          </svg>
        </div>
        <%= @shipping_line.name %>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @shipping_line.created_at.strftime("%d de %b") %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
      <div class="flex space-x-2 justify-end">
        <%= link_to edit_shipping_line_path(@shipping_line), class: "text-yellow-600 hover:text-yellow-900", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
        <% end %>
        <%= button_to shipping_line_path(@shipping_line), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0", data: { turbo_confirm: "Are you sure you want to delete this shipping line?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>

<%= turbo_stream.append "shipping_lines_list_mobile" do %>
  <div class="bg-white shadow-md rounded-lg p-4 hover:bg-gray-50" id="shipping_line_mobile_<%= @shipping_line.id %>">
    <div class="flex items-start justify-between">
      <div class="flex items-center flex-1">
        <div class="bg-blue-600 p-2 rounded mr-3 flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="5" r="3"/>
            <line x1="12" y1="22" x2="12" y2="8"/>
            <path d="m5 12a7 7 0 0 1 14 0"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-medium text-gray-900 truncate"><%= @shipping_line.name %></h3>
          <p class="text-xs text-gray-400 mt-1"><%= @shipping_line.created_at.strftime("%d de %b") %></p>
        </div>
      </div>
      <div class="flex space-x-2 ml-2">
        <%= link_to edit_shipping_line_path(@shipping_line), class: "text-yellow-600 hover:text-yellow-900 p-1", data: { turbo_frame: "modal" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
        <% end %>
        <%= button_to shipping_line_path(@shipping_line), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none p-1", data: { turbo_confirm: "Are you sure you want to delete this shipping line?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream.update "modal", "" %>